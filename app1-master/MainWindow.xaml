<Window x:Class="SportsStoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SportsStoreApp"
        Title="Спортивный магазин - Управление товарами" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Background>

        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">

            <GradientStop Color="#FF1E3C72" Offset="0"/>

            <GradientStop Color="#FF2A5298" Offset="1"/>

        </LinearGradientBrush>

    </Window.Background>



    <Grid Margin="20">

        <Border Background="White" 

                CornerRadius="10" 

                Padding="20">



            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition Height="Auto"/>

                    <RowDefinition Height="Auto"/>

                    <RowDefinition Height="*"/>

                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>



                <!-- Заголовок и информация о пользователе -->

                <Grid Grid.Row="0" Margin="0,0,0,20">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="*"/>

                        <ColumnDefinition Width="Auto"/>

                    </Grid.ColumnDefinitions>



                    <!-- Логотип -->

                    <StackPanel Grid.Column="0" Orientation="Horizontal">

                        <Ellipse Width="50" Height="50" Stroke="#1E3C72" StrokeThickness="2">

                            <Ellipse.Fill>

                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">

                                    <GradientStop Color="#FF4CAF50" Offset="0"/>

                                    <GradientStop Color="#FF2E7D32" Offset="1"/>

                                </LinearGradientBrush>

                            </Ellipse.Fill>

                        </Ellipse>

                        <TextBlock Text="SPORTS STORE" 

                                   FontSize="24" 

                                   FontWeight="Bold" 

                                   VerticalAlignment="Center"

                                   Margin="10,0,0,0"

                                   Foreground="#1E3C72"/>

                    </StackPanel>



                    <!-- Информация о пользователе -->

                    <StackPanel Grid.Column="2" Orientation="Horizontal">

                        <TextBlock Text="Администратор" 

                                   VerticalAlignment="Center"

                                   FontSize="14"

                                   Foreground="#666"

                                   Margin="0,0,10,0"/>

                        <Button Content="Выйти" 

                                Height="35"

                                Width="100"

                                Background="#f44336"

                                Foreground="White"

                                BorderThickness="0"

                                Cursor="Hand">

                            <Button.Resources>

                                <Style TargetType="Border">

                                    <Setter Property="CornerRadius" Value="5"/>

                                </Style>

                            </Button.Resources>

                        </Button>

                    </StackPanel>

                </Grid>



                <!-- Панель инструментов -->

                <Border Grid.Row="1" 

                        Background="#F5F5F5" 

                        CornerRadius="5" 

                        Padding="15"

                        Margin="0,0,0,20">

                    <Grid>

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="*"/>

                            <ColumnDefinition Width="Auto"/>

                        </Grid.ColumnDefinitions>



                        <!-- Кнопки действий -->

                        <StackPanel Grid.Column="0" Orientation="Horizontal">

                            <Button Content="➕ Добавить товар" 

                                    Height="40"

                                    Width="130"

                                    Margin="0,0,10,0"

                                    Background="#4CAF50"

                                    Foreground="White"

                                    BorderThickness="0"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="5"/>

                                    </Style>

                                </Button.Resources>

                            </Button>



                            <Button Content="✏️ Редактировать" 

                                    Height="40"

                                    Width="130"

                                    Margin="0,0,10,0"

                                    Background="#2196F3"

                                    Foreground="White"

                                    BorderThickness="0"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="5"/>

                                    </Style>

                                </Button.Resources>

                            </Button>



                            <Button Content="🗑️ Удалить" 

                                    Height="40"

                                    Width="130"

                                    Background="#f44336"

                                    Foreground="White"

                                    BorderThickness="0"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="5"/>

                                    </Style>

                                </Button.Resources>

                            </Button>

                        </StackPanel>



                        <!-- Поиск -->

                        <Border Grid.Column="1" 

                                Background="White" 

                                CornerRadius="5"

                                BorderBrush="#DDD"

                                BorderThickness="1">

                            <Grid>

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="*"/>

                                    <ColumnDefinition Width="Auto"/>

                                </Grid.ColumnDefinitions>



                                <TextBox x:Name="txtSearch" 

                                         Height="40" 

                                         Padding="10,0"

                                         BorderThickness="0"

                                         Background="Transparent"

                                         Text="Поиск товаров..."

                                         Foreground="#999"

                                         GotFocus="txtSearch_GotFocus"

                                         LostFocus="txtSearch_LostFocus"/>



                                <Button Grid.Column="1" 

                                        Content="🔍" 

                                        Width="40"

                                        Height="40"

                                        Background="Transparent"

                                        BorderThickness="0"

                                        FontSize="18"

                                        Cursor="Hand"/>

                            </Grid>

                        </Border>

                    </Grid>

                </Border>



                <!-- DataGrid -->

                <DataGrid Grid.Row="2" 

                          x:Name="dgProducts"

                          AutoGenerateColumns="False"

                          CanUserAddRows="False"

                          CanUserDeleteRows="False"

                          CanUserResizeColumns="True"

                          IsReadOnly="True"

                          SelectionMode="Single"

                          Background="White"

                          BorderBrush="#DDD"

                          BorderThickness="1"

                          RowHeight="45"

                          FontSize="14"

                          Margin="0,0,0,20"

                          GridLinesVisibility="Horizontal"

                          HorizontalGridLinesBrush="#EEE">



                    <DataGrid.Resources>

                        <!-- Стиль для заголовков колонок -->

                        <Style TargetType="DataGridColumnHeader">

                            <Setter Property="Background" Value="#1E3C72"/>

                            <Setter Property="Foreground" Value="White"/>

                            <Setter Property="FontSize" Value="14"/>

                            <Setter Property="FontWeight" Value="SemiBold"/>

                            <Setter Property="Height" Value="45"/>

                            <Setter Property="HorizontalContentAlignment" Value="Center"/>

                        </Style>



                        <!-- Стиль для ячеек -->

                        <Style TargetType="DataGridCell">

                            <Setter Property="VerticalAlignment" Value="Center"/>

                            <Setter Property="Padding" Value="10"/>

                            <Setter Property="Template">

                                <Setter.Value>

                                    <ControlTemplate TargetType="DataGridCell">

                                        <Grid Background="{TemplateBinding Background}">

                                            <ContentPresenter VerticalAlignment="Center" 

                                                            HorizontalAlignment="Center"

                                                            Margin="10"/>

                                        </Grid>

                                    </ControlTemplate>

                                </Setter.Value>

                            </Setter>

                        </Style>



                        <!-- Стиль для строк при наведении -->

                        <Style TargetType="DataGridRow">

                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">

                                    <Setter Property="Background" Value="#E3F2FD"/>

                                </Trigger>

                                <Trigger Property="IsSelected" Value="True">

                                    <Setter Property="Background" Value="#4CAF50"/>

                                    <Setter Property="Foreground" Value="White"/>

                                </Trigger>

                            </Style.Triggers>

                        </Style>

                    </DataGrid.Resources>



                    <!-- Определение колонок -->

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ID" 

                                            Binding="{Binding Id}" 

                                            Width="70"/>



                        <DataGridTextColumn Header="Наименование" 

                                            Binding="{Binding Name}" 

                                            Width="*"/>



                        <DataGridTextColumn Header="Категория" 

                                            Binding="{Binding Category}" 

                                            Width="150"/>



                        <DataGridTextColumn Header="Цена" 

                                            Binding="{Binding Price, StringFormat={}{0:C}}" 

                                            Width="120"/>



                        <DataGridTextColumn Header="Количество" 

                                            Binding="{Binding Quantity}" 

                                            Width="100"/>



                        <DataGridTemplateColumn Header="Статус" 

                                                Width="120">

                            <DataGridTemplateColumn.CellTemplate>

                                <DataTemplate>

                                    <Border CornerRadius="3" 

                                            Padding="5,2"

                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">

                                        <TextBlock Text="{Binding Status}" 

                                                   Foreground="White"

                                                   HorizontalAlignment="Center"

                                                   FontSize="12"

                                                   FontWeight="Bold"/>

                                    </Border>

                                </DataTemplate>

                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>



                        <DataGridTextColumn Header="Дата добавления" 

                                            Binding="{Binding AddedDate, StringFormat={}{0:dd.MM.yyyy}}" 

                                            Width="120"/>

                    </DataGrid.Columns>

                </DataGrid>



                <!-- Нижняя панель с информацией и пагинацией -->

                <Border Grid.Row="3" 

                        Background="#F5F5F5" 

                        CornerRadius="5" 

                        Padding="15">

                    <Grid>

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="*"/>

                            <ColumnDefinition Width="Auto"/>

                        </Grid.ColumnDefinitions>



                        <!-- Информация о количестве записей -->

                        <StackPanel Grid.Column="0" Orientation="Horizontal">

                            <TextBlock Text="Всего товаров: " 

                                       Foreground="#666"

                                       FontSize="14"/>

                            <TextBlock x:Name="txtTotalItems" 

                                       Text="15" 

                                       Foreground="#1E3C72"

                                       FontWeight="Bold"

                                       FontSize="14"/>

                        </StackPanel>



                        <!-- Пагинация -->

                        <StackPanel Grid.Column="1" Orientation="Horizontal">

                            <Button Content="◀" 

                                    Width="35"

                                    Height="35"

                                    Margin="0,0,5,0"

                                    Background="White"

                                    BorderBrush="#DDD"

                                    BorderThickness="1"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="3"/>

                                    </Style>

                                </Button.Resources>

                            </Button>



                            <Button Content="1" 

                                    Width="35"

                                    Height="35"

                                    Margin="0,0,5,0"

                                    Background="#1E3C72"

                                    Foreground="White"

                                    BorderThickness="0"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="3"/>

                                    </Style>

                                </Button.Resources>

                            </Button>



                            <Button Content="2" 

                                    Width="35"

                                    Height="35"

                                    Margin="0,0,5,0"

                                    Background="White"

                                    BorderBrush="#DDD"

                                    BorderThickness="1"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="3"/>

                                    </Style>

                                </Button.Resources>

                            </Button>



                            <Button Content="3" 

                                    Width="35"

                                    Height="35"

                                    Margin="0,0,5,0"

                                    Background="White"

                                    BorderBrush="#DDD"

                                    BorderThickness="1"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="3"/>

                                    </Style>

                                </Button.Resources>

                            </Button>



                            <Button Content="▶" 

                                    Width="35"

                                    Height="35"

                                    Background="White"

                                    BorderBrush="#DDD"

                                    BorderThickness="1"

                                    Cursor="Hand">

                                <Button.Resources>

                                    <Style TargetType="Border">

                                        <Setter Property="CornerRadius" Value="3"/>

                                    </Style>

                                </Button.Resources>

                            </Button>

                        </StackPanel>

                    </Grid>

                </Border>

            </Grid>

        </Border>

    </Grid>
</Window>